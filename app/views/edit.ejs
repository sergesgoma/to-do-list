<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/c6f4b89e6b.js" crossorigin="anonymous"></script>
    <title>To-Do List</title>
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <form action="/" method="post" class="todo-form">
            <input type="text" name="todo" id="todo" class="todo-input" placeholder="What will you do today?">
            <button class="btn">Add</button>
            </form>
        </div>
        <hr />
       
        <div class="wrapper-todo response"> 
        <% todolists.forEach (details => { %>
        <form action="/edit/<%=details._id %>" method="post">
            <% if (details._id == id) {%>
            <div class="edit">
                <div class="bloc">
                    <input type="text" name="content" id="content" value="<%= details.content %>" class="todo-edit">
                </div>
                <div class="icon">
                    <input type="submit" value="OK" class="check">
                    <a href="/" class="return"><i class="fa-solid fa-arrow-rotate-left"></i></a>
                </div>
            </div>
            <% }%>
        </form>
        <% }) %>
        </div>
        
       
        
        <hr />
        
    </div>
</body>
</html>